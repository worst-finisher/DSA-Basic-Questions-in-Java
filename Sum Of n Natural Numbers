import java.util.*;
public class Main
{
    public static void main(String args[])
    {
        int i;
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter The Number :- ");
        int n = sc.nextInt();
        int sum = 0;
        for(i=1;i<=n;i++)
        {
            sum = sum+i;
            
        }
        System.out.println("");
        System.out.println("The Sum Of Following Natural Numbers Is :- "+sum);
    }
}
